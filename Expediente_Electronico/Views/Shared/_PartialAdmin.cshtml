@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Administrador", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav  navbar-right">
            <li>
                @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav nav-link navbar-right ">
        @if (Session["CorreoId"] != null)
        {
            <li class="nav-item ">
                <a class="nav-link " href="#" id="navbarDropdown" role="button"  aria-haspopup="true" aria-expanded="false">
                    @Session["CorreoId"].ToString()
                </a>
            </li>
            <li class="nav-item" style="color:white">
                <a class="nav-link" href="@Url.Action("LogOff", "Administrador")">Cerrar Sesión</a>
            </li>
        }
    </ul>


}

