@model Expediente_Electronico.Models.Consulta

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAD.cshtml";
}

<br />
<h2>Detalle de Consulta</h2>
<br />

<div>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Medico)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Medico.nombre)
            @Html.DisplayFor(model => model.Medico.p_Apellido)
            @Html.DisplayFor(model => model.Medico.s_Apellido)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Especialidad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Especialidad.descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Consultorio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consultorio.descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>
    </dl>
</div>
<p>
    <button type="button" class="btn btn-outline-primary"
            onclick="location.href='@Url.Action("Edit", "Consulta",new { id = Model.id })'">
        Editar
    </button>

    <button type="button" class="btn btn-outline-success"
            onclick="location.href='@Url.Action("Index", "Consulta")'">
        Regresar
    </button>
</p>